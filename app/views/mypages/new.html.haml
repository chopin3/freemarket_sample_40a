.main-content
  = render 'modules/mypage-sidebar'
  .new-content
    %h2.l-chapter-head.middle-center.bold 本人情報の登録
    .text-center.middle-center お客さまのあんしん・あんぜんな取引のため、本人情報のご登録をお願いしております。

    %form.l-single-inner{action: "https://www.mercari.com/jp/mypage/identification/save/", method: "POST", novalidate: ""}
      .form-new-group
        %label.new.bold お名前
        %span.form-require.back-red.font-white 必須
        %input.new.input-default{name: "family_name_kanji", placeholder: "例）阿部", type: "text", value: ""}/
        %input.new.input-default{name: "first_name_kanji", placeholder: "例）寛", type: "text", value: ""}/

      .form-new-group
        %label.new.bold お名前カナ
        %span.form-require.back-red.font-white 必須
        %input.new.input-default{name: "family_name_kana", placeholder: "例）アベ", type:"text", value: ""}/
        %input.new.input-default{name: "first_name_kana", placeholder: "例）ヒロシ", type: "text", value: ""}/

      .form-new-group
        %label.new.bold{for: "zip_code"} 郵便番号
        %span.form-arbitrary.font-white 任意
        %input.new.input-default{name: "zip_code", placeholder: "例）1234567", type: "text", value: ""}/

      .form-new-group
        %label.new.bold{for: "prefecture"} 都道府県
        %span.form-require.back-red.font-white 必須
        .select-wrap.new
          %i.fa.new.fa-chevron-down.prefec.font-gray
          %select.select-default{name: "prefecture"}
            %option{value: ""} --
            %option 大阪府
            %option 兵庫県
            %option 京都府
            %option 滋賀県
            %option 奈良県
            %option 和歌山県
      .form-new-group
        %label.new.bold{for: "city"} 市区町村
        %span.form-require.back-red.font-white 必須
        %input.new.input-default{name: "city", placeholder: "例）大阪市北区", type: "text", value: ""}/

      .form-new-group
        %label.new.bold{for: "address1_label"} 番地
        %span.form-require.back-red.font-white 必須
        %input.new.input-default{name: "address1", placeholder: "例）中崎西2−4−43", type: "text", value:""}/
      .form-new-group
        %label.new.bold{for: "address2_label"} 建物名
        %span.form-arbitrary.font-white 任意
        %input.new.input-default{name: "address2", placeholder: "例）山本ビル梅田5階", type: "text", value: ""}/

      .form-new-group
        .class
          %label.new.bold{for: "birthday"} 生年月日
          %span.form-require.back-red.font-white 必須
        .birthday
          .select-wrap.new
            %i.fa.new.fa-chevron-down.warp.font-gray
            %select.select-default2{name: "year"}
              %option{value: ""} --
              %option{value: "1994"} 1994
              %option{value: "1995"} 1995
              %option{value: "1996"} 1996
            %span 年
          .select-wrap.new
            %i.fa.new.fa-chevron-down.warp.font-gray
            %select.select-default2{name: "month"}
              %option{value: ""} --
              %option{value: "1"} 1
              %option{value: "2"} 2
              %option{value: "3"} 3
              %option{value: "4"} 4
              %option{value: "5"} 5
              %option{value: "6"} 6
              %option{value: "7"} 7
              %option{value: "8"} 8
              %option{value: "9"} 9
              %option{value: "10"} 10
              %option{value: "11"} 11
              %option{value: "12"} 12
            %span 月
          .select-wrap.new
            %i.fa.new.fa-chevron-down.warp.font-gray
            %select.select-default2{name: "day"}
              %option{value: ""} --
              %option{value: "1"} 1
              %option{value: "2"} 2
              %option{value: "3"} 3
              %option{value: "4"} 4
              %option{value: "5"} 5
              %option{value: "6"} 6
              %option{value: "7"} 7
              %option{value: "8"} 8
              %option{value: "9"} 9
              %option{value: "10"} 10
              %option{value: "11"} 11
              %option{value: "12"} 12
              %option{value: "13"} 13
              %option{value: "14"} 14
              %option{value: "15"} 15
              %option{value: "16"} 16
              %option{value: "17"} 17
              %option{value: "18"} 18
              %option{value: "19"} 19
