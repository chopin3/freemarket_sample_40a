%section.carousel
  .slider
    = image_tag 'https://www.mercari.com/jp/assets/img/common/jp/top/top-banner-kusanagi-xmas.jpg'
    = image_tag 'https://www.mercari.com/jp/assets/img/common/jp/top/top-banner-new-register.png'
%section.pickup
  %h1.pickup__head.bold ピックアップカテゴリー
  %section.pickup__area
    .pickup__area__text-center
      = link_to "レディース新着アイテム",new_item_path
    .pickup__area__items-box
      - @item.each do |item|
        .pickup__area__items-box__items
          = link_to new_item_path do
            .pickup__area__items-box__items__photo
              = image_tag item.images.first.image,class: "top_image"

            .pickup__area__items-box__items__body
              %h4.pickup__area__items-box__items__name
                = item.name
              .pickup__area__items-box__items__num
                .pickup__area__items-box__items__num__price.bold
                  ¥#{item.price}
                .pickup__area__items-box__items__num__likes
                  %i.far.fa-heart
                  %span
                  =item.likes_count
              %p.pickup__area__items-box__items__tax (税込)
    .pickup__view-all
      = link_to "すべての商品を見る",new_item_path
